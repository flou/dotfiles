{{- $firstname := (.my.name | split " ")._0 -}}
{{- $lastname := (.my.name | split " ")._1 | upper -}}
[user]
  name = {{ printf "%s %s" $firstname $lastname | quote }}
  email = {{ .my.work_email | quote }}
  signingkey = {{ (onepasswordDetailsFields "y36tqmojyxoqugz6gwyqxpmwbm").public_key.value | quote }}
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
  allowedSignersFile = {{ .chezmoi.homeDir }}/.ssh/allowed_signers
[commit]
  gpgsign = true
