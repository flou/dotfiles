#!/bin/bash

set -eufo pipefail

{{ $brews := list
    "bat"
    "btop"
    "chezmoi"
    "curlie"
    "difftastic"
    "eza"
    "fd"
    "fzf"
    "ghorg"
    "git"
    "git-delta"
    "helix"
    "jj"
    "lazygit"
    "mise"
    "ripgrep"
    "vivid"
    "xh"
    "yazi"
    "zsh"
-}}

{{ $casks := (list
    "1password-cli"
    "ghostty@tip"
) -}}

{{ if .work -}}
{{ $brews = concat $brews (list
    "colima"
    "direnv"
    "gnu-sed"
    "moreutils"
    "starship"
) -}}

{{ $casks = concat $casks (list) -}}
{{ end -}}

brew bundle --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}

{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
